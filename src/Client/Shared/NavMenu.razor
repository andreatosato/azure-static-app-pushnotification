@inject NavigationManager navigationManager

<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
        Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="IconName.Desktop" />
                Blazing PWA
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarLabel>Main</BarLabel>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="@("account_circle")" />
                        Users
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="users">
                            <BarIcon IconName="@("person_search")" />
                            Users List
                        </BarDropdownItem>
                        <BarDropdownItem To="usersgrid">
                            <BarIcon IconName="@("account_box")" />
                            Users Grid
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="@("notification_important")" />
                        Push Notification
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="notifications">
                            <BarIcon IconName="@("add_alert")" />
                            Emit Notification
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="@("login")" />
                        Login
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To=".auth/login/github">
                            <i class="fab fa-github"></i> Login Github
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>


@code {
    void ToggleSidebar()
    {
        AppStore.Sidebar.Toggle();
    }

}